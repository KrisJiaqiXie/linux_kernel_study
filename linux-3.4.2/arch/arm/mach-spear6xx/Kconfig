	select MACH_SPEAR600
	select USE_OF
	help
	  Supports ST SPEAr600 boards configured via the device-tree

endmenu

config MACH_SPEAR600
	bool "SPEAr600"
	help
	  Supports ST SPEAr600 Machine

endif #ARCH_SPEAR6XX
